# REST API Environment Variables Example
# Скопируйте этот файл в .env и настройте значения

# Database
DATABASE_URL=sqlite:///./data/glossary.db

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True

# CORS
CORS_ORIGINS=["*"]

# Logging
LOG_LEVEL=INFO

# API Documentation
API_TITLE=Blockchain Glossary API
API_VERSION=1.0.0
API_DESCRIPTION=API для управления глоссарием терминов исследования производительности блокчейн-платформ
